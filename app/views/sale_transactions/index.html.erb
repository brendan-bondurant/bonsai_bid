<h1>Transaction History</h1>

<div class="sales-list">
  <h2>Your Sales</h2>
  <% @sales.each do |sale| %>
    <div class="transaction sale">
      <p><strong>Transaction ID:</strong> <%= sale.id %></p>
      <p><strong>Item:</strong> <%= sale.auction.item.name %></p>
      <p><strong>Date:</strong> <%= sale.created_at.strftime("%B %d, %Y") %></p>
      <p><strong>Buyer:</strong> <%= sale.buyer.name %></p>
      <p><strong>Final Price:</strong> $<%= sale.final_price %></p>
    </div>
  <% end %>
</div>

<div class="purchases-list">
  <h2>Your Purchases</h2>
  <% @purchases.each do |purchase| %>
    <div class="transaction purchase">
      <p><strong>Transaction ID:</strong> <%= purchase.id %></p>
      <p><strong>Item:</strong> <%= purchase.auction.item.name %></p>
      <p><strong>Date:</strong> <%= purchase.created_at.strftime("%B %d, %Y") %></p>
      <p><strong>Seller:</strong> <%= purchase.seller.name %></p>
      <p><strong>Final Price:</strong> $<%= purchase.final_price %></p>
    </div>
  <% end %>
</div>
