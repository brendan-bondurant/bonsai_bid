<h1>Log In</h1>
  <% flash.each do |type, message| %>
    <div class="flash <%= type %>">
      <%= message %>
    </div>
  <% end %>

<%= form_with url: login_path, method: :post, local: true do |form| %>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email, id: :user_email %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password, id: :user_password %>
  </div>

  <div class="actions">
    <%= form.submit "Log in" %>
  </div>
<% end %>
